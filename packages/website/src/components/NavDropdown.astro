---
interface Link {
  href: string;
  text: string;
}

interface Props {
  title: string;
  links: Link[];
}

const { title, links } = Astro.props;
---

<div class="nav-dropdown relative">
  <button type="button" class="flex items-center gap-1 font-bold text-xl text-muted-foreground transition-colors hover:text-foreground">
    {title}
    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
    </svg>
  </button>
  <div class="nav-dropdown-menu invisible absolute right-0 top-full z-50 mt-2 min-w-[180px] rounded-md border bg-popover py-1 opacity-0 shadow-md transition-all">
    {links.map((link) => (
      <a href={link.href} class="block px-4 py-2 text-sm text-muted-foreground transition-colors hover:bg-accent hover:text-foreground">
        {link.text}
      </a>
    ))}
  </div>
</div>
