---
import type { LicenseInfo } from '@tearleads/shared';
import Layout from '../../layouts/Layout.astro';
import licensesData from '@tearleads/shared/licenses.json';
import { isSupportedLanguage, defaultLanguage } from '../../i18n/config';
import type { SupportedLanguage } from '../../i18n/config';
import { getStaticPathsForLocales, getHref } from '../../i18n/utils';

export const getStaticPaths = getStaticPathsForLocales;

const { lang } = Astro.params;
const currentLang: SupportedLanguage = isSupportedLanguage(lang) ? lang : defaultLanguage;
const licenses = licensesData as LicenseInfo[];
---

<Layout title="Open Source Licenses - Tearleads" lang={currentLang}>
  <section class="container mx-auto max-w-4xl px-4 py-8">
    <nav class="mb-8">
      <a href={getHref('/', currentLang)} class="text-muted-foreground hover:text-foreground">&larr; Back to Home</a>
    </nav>

    <div class="mb-6">
      <h2 class="font-bold text-3xl mb-2">Open Source Licenses</h2>
      <p class="text-muted-foreground">
        The Tearleads ecosystem would not be possible without the following open source technologies.
      </p>
    </div>

    <div class="rounded-xl border bg-card shadow-sm">
      <div class="divide-y">
        {licenses.map((pkg) => (
          <div class="flex items-baseline justify-between px-4 py-3">
            {pkg.repository ? (
              <a href={pkg.repository} target="_blank" rel="noopener noreferrer" class="font-mono text-sm text-primary hover:underline">
                {pkg.name}
              </a>
            ) : (
              <span class="font-mono text-sm">{pkg.name}</span>
            )}
            <span class="text-muted-foreground text-sm">
              v{pkg.version} - {pkg.license}
            </span>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
