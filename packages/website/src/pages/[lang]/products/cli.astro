---
import Layout from '../../../layouts/Layout.astro';
import { supportedLanguages, isSupportedLanguage, defaultLanguage } from '../../../i18n/config';
import type { SupportedLanguage } from '../../../i18n/config';

export function getStaticPaths() {
  return supportedLanguages.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const currentLang: SupportedLanguage = isSupportedLanguage(lang) ? lang : defaultLanguage;
---

<Layout title="CLI - Rapid" lang={currentLang}>
  <div class="container mx-auto px-4 py-16">
    <h1 class="font-bold text-4xl">Rapid CLI</h1>
    <p class="mt-4 text-muted-foreground text-lg">
      Command-line interface for Rapid.
    </p>

    <div class="mt-8 rounded-lg border bg-card p-6">
      <h2 class="mb-4 font-semibold text-2xl">Coming Soon</h2>
      <p class="text-muted-foreground">
        The Rapid CLI is currently under development. Check back soon for installation instructions and documentation.
      </p>
    </div>
  </div>
</Layout>
