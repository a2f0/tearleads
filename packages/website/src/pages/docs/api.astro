---
import openapiSpec from "@tearleads/api/dist/openapi.json";
import { ApiDocs } from "@tearleads/ui";
import { defaultLanguage } from "../../i18n/config";
import Layout from "../../layouts/Layout.astro";

const currentLang = defaultLanguage;
---

<Layout title="API Documentation - Tearleads" lang={currentLang}>
  <section class="container mx-auto px-4 py-8">
    <ApiDocs client:load spec={openapiSpec} />
  </section>
</Layout>
