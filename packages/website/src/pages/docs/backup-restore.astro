---
import Layout from '../../layouts/Layout.astro';
import { Content } from '@docs/backup-restore.md';
---

<Layout title="Backup & Restore - Rapid">
  <section class="container mx-auto px-4 py-8">
    <div class="rounded-xl border bg-card p-6 shadow-sm">
      <div class="backup-restore-docs overflow-x-auto" data-testid="backup-restore-content">
        <Content />
      </div>
    </div>
  </section>
</Layout>

<style>
  .backup-restore-docs :global(h1),
  .backup-restore-docs :global(h2),
  .backup-restore-docs :global(h3) {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    font-weight: 600;
  }

  .backup-restore-docs :global(h1) {
    font-size: 1.875rem;
  }

  .backup-restore-docs :global(h2) {
    font-size: 1.5rem;
  }

  .backup-restore-docs :global(h3) {
    font-size: 1.25rem;
  }

  .backup-restore-docs :global(p) {
    margin-bottom: 1rem;
    color: var(--color-muted-foreground);
  }

  .backup-restore-docs :global(svg) {
    max-width: 100%;
    height: auto;
    min-width: 600px;
  }

  .backup-restore-docs :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin-top: 1rem;
  }

  .backup-restore-docs :global(th),
  .backup-restore-docs :global(td) {
    border: 1px solid var(--color-border);
    padding: 0.5rem 1rem;
    text-align: left;
  }

  .backup-restore-docs :global(th) {
    background-color: var(--color-muted);
    font-weight: 600;
  }

  .backup-restore-docs :global(ul),
  .backup-restore-docs :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
    color: var(--color-muted-foreground);
  }

  .backup-restore-docs :global(li) {
    margin-bottom: 0.25rem;
  }

  .backup-restore-docs :global(code) {
    background-color: var(--color-muted);
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }

  .backup-restore-docs :global(pre) {
    background-color: var(--color-muted);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: 1rem;
  }

  .backup-restore-docs :global(pre code) {
    background-color: transparent;
    padding: 0;
  }
</style>
