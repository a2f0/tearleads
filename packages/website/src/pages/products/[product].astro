---
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  return [
    { params: { product: 'desktop' }, props: { title: 'Desktop', description: 'Desktop application content coming soon.' } },
    { params: { product: 'mobile' }, props: { title: 'Mobile', description: 'Mobile application content coming soon.' } },
    { params: { product: 'web' }, props: { title: 'Web', description: 'Web application content coming soon.' } },
    { params: { product: 'chrome-extension' }, props: { title: 'Chrome Extension', description: 'Chrome extension content coming soon.' } },
  ];
}

const { title, description } = Astro.props;
---

<Layout title={`${title} - Rapid`}>
  <section class="container mx-auto px-4 py-8">
    <div class="rounded-xl border bg-card p-6 shadow-sm">
      <h1 class="mb-4 font-bold text-3xl">Rapid {title}</h1>
      <p class="text-muted-foreground">{description}</p>
    </div>
  </section>
</Layout>
