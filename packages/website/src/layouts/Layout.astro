---
import logo from '@rapid/ui/logo.svg?url';
import { ThemeSwitcherIsland } from '../components/ThemeSwitcherIsland';
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentYear = new Date().getFullYear();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <script is:inline>
      (function () {
        const theme = localStorage.getItem('theme') || 'system';
        const resolved =
          theme === 'system'
            ? window.matchMedia('(prefers-color-scheme: dark)').matches
              ? 'dark'
              : 'light'
            : theme;
        document.documentElement.classList.add(resolved);
      })();
    </script>
  </head>
  <body>
    <div class="flex min-h-screen flex-col bg-background">
      <header class="border-b">
        <div
          class="container mx-auto flex items-center justify-between px-4 py-4"
        >
          <div class="flex items-center gap-6">
            <a href="/" class="flex items-center gap-3">
              <img src={logo} alt="Rapid" class="h-8 w-8" />
              <p class="font-bold text-2xl">Rapid</p>
            </a>
            <nav class="hidden items-center gap-6 md:flex">
              <div class="nav-dropdown relative">
                <button type="button" class="flex items-center gap-1 text-muted-foreground transition-colors hover:text-foreground">
                  Products
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </button>
                <div class="nav-dropdown-menu invisible absolute left-0 top-full z-50 mt-2 min-w-[180px] rounded-md border bg-popover py-1 opacity-0 shadow-md transition-all">
                  <a href="/products/desktop" class="block px-4 py-2 text-sm text-muted-foreground transition-colors hover:bg-accent hover:text-foreground">
                    Desktop
                  </a>
                  <a href="/products/mobile" class="block px-4 py-2 text-sm text-muted-foreground transition-colors hover:bg-accent hover:text-foreground">
                    Mobile
                  </a>
                  <a href="/products/web" class="block px-4 py-2 text-sm text-muted-foreground transition-colors hover:bg-accent hover:text-foreground">
                    Web
                  </a>
                  <a href="/products/chrome-extension" class="block px-4 py-2 text-sm text-muted-foreground transition-colors hover:bg-accent hover:text-foreground">
                    Chrome Extension
                  </a>
                </div>
              </div>
              <div class="nav-dropdown relative">
                <button type="button" class="flex items-center gap-1 text-muted-foreground transition-colors hover:text-foreground">
                  Docs
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </button>
                <div class="nav-dropdown-menu invisible absolute left-0 top-full z-50 mt-2 min-w-[180px] rounded-md border bg-popover py-1 opacity-0 shadow-md transition-all">
                  <a href="/docs/architecture" class="block px-4 py-2 text-sm text-muted-foreground transition-colors hover:bg-accent hover:text-foreground">
                    Security Architecture
                  </a>
                  <a href="/docs/api" class="block px-4 py-2 text-sm text-muted-foreground transition-colors hover:bg-accent hover:text-foreground">
                    API
                  </a>
                </div>
              </div>
            </nav>
          </div>
          <ThemeSwitcherIsland client:load />
        </div>
      </header>
      <main class="flex-1">
        <slot />
      </main>
      <footer
        class="border-t bg-background py-6 text-muted-foreground text-sm"
        style="padding-bottom: calc(1.5rem + env(safe-area-inset-bottom, 0px));"
      >
        <div class="container mx-auto flex items-center px-4">
          <div class="flex-1 text-center">
            <p>&copy; {currentYear} Rapid. All rights reserved.</p>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
