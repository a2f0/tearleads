---
import logo from '@rapid/ui/logo.svg?url';
import NavDropdown from '../components/NavDropdown.astro';
import { SettingsIsland } from '../components/SettingsIsland';
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentYear = new Date().getFullYear();

const productLinks = [
  { href: '/products/cli', text: 'CLI' },
  { href: '/products/desktop', text: 'Desktop' },
  { href: '/products/mobile', text: 'Mobile' },
  { href: '/products/web', text: 'Web' },
  { href: '/products/chrome-extension', text: 'Chrome Extension' },
];

const docsLinks = [
  { href: '/docs/architecture', text: 'Security Architecture' },
  { href: '/docs/api', text: 'API' },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <script is:inline>
      (function () {
        const theme = localStorage.getItem('theme') || 'system';
        const resolved =
          theme === 'system'
            ? window.matchMedia('(prefers-color-scheme: dark)').matches
              ? 'dark'
              : 'light'
            : theme;
        document.documentElement.classList.add(resolved);
      })();
    </script>
  </head>
  <body>
    <div class="flex min-h-screen flex-col bg-background">
      <header class="border-b">
        <div
          class="container mx-auto flex items-center justify-between px-4 py-4"
        >
          <a href="/" class="flex items-center gap-3">
            <img src={logo} alt="Rapid" class="h-8 w-8" />
            <p class="font-bold text-2xl">Rapid</p>
          </a>
          <div class="flex items-center gap-4">
            <nav class="hidden items-center gap-4 md:flex">
              <NavDropdown title="Products" links={productLinks} />
              <NavDropdown title="Docs" links={docsLinks} />
            </nav>
            <SettingsIsland client:load />
          </div>
        </div>
      </header>
      <main class="flex-1">
        <slot />
      </main>
      <footer
        class="border-t bg-background py-6 text-muted-foreground text-sm"
        style="padding-bottom: calc(1.5rem + env(safe-area-inset-bottom, 0px));"
      >
        <div class="container mx-auto flex flex-col items-center gap-2 px-4">
          <p>&copy; {currentYear} Rapid. All rights reserved.</p>
          <a href="/licenses" class="text-xs hover:text-foreground hover:underline">Open Source Licenses</a>
        </div>
      </footer>
    </div>
  </body>
</html>
