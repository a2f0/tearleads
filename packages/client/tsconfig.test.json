    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist-tests",
    "tsBuildInfoFile": "./dist-tests/.tsbuildinfo"
  },
  "include": ["tests/**/*"]
}
