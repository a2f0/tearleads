{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@client/*": ["./src/*"],
      "@/*": ["./src/*"],
      "@admin/*": ["../admin/src/*"],
      "@tearleads/admin/package.json": ["../admin/package.json"],
      "@tearleads/admin": ["../admin/src/index.ts"],
      "@tearleads/audio/package.json": ["../audio/package.json"],
      "@tearleads/audio": ["../audio/src/index.ts"],
      "@tearleads/calendar/package.json": ["../calendar/package.json"],
      "@tearleads/calendar": ["../calendar/src/index.ts"],
      "@tearleads/console/package.json": ["../console/package.json"],
      "@tearleads/console": ["../console/src/index.ts"],
      "@tearleads/classic/package.json": ["../classic/package.json"],
      "@tearleads/classic": ["../classic/src/index.ts"],
      "@tearleads/contacts/package.json": ["../contacts/package.json"],
      "@tearleads/contacts": ["../contacts/src/index.ts"],
      "@tearleads/email/package.json": ["../email/package.json"],
      "@tearleads/email": ["../email/src/index.ts"],
      "@tearleads/help/package.json": ["../help/package.json"],
      "@tearleads/help": ["../help/src/index.ts"],
      "@tearleads/keychain/package.json": ["../keychain/package.json"],
      "@tearleads/keychain": ["../keychain/src/index.ts"],
      "@tearleads/notes/package.json": ["../notes/package.json"],
      "@tearleads/notes": ["../notes/src/index.ts"],
      "@tearleads/search/package.json": ["../search/package.json"],
      "@tearleads/search": ["../search/src/index.ts"],
      "@tearleads/terminal/package.json": ["../terminal/package.json"],
      "@tearleads/terminal": ["../terminal/src/index.ts"],
      "@tearleads/vfs-explorer/package.json": ["../vfs-explorer/package.json"],
      "@tearleads/vfs-explorer": ["../vfs-explorer/src/index.ts"],
      "@tearleads/mls-chat/package.json": ["../mls-chat/package.json"],
      "@tearleads/mls-chat": ["../mls-chat/src/index.ts"],
      "@tearleads/window-manager": ["../window-manager/src/index.ts"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
