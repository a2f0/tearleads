{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@client/*": ["./src/*"],
      "@/*": ["./src/*"],
      "@rapid/audio/package.json": ["../audio/package.json"],
      "@rapid/audio": ["../audio/src/index.ts"],
      "@rapid/calendar/package.json": ["../calendar/package.json"],
      "@rapid/calendar": ["../calendar/src/index.ts"],
      "@rapid/classic/package.json": ["../classic/package.json"],
      "@rapid/classic": ["../classic/src/index.ts"],
      "@rapid/contacts/package.json": ["../contacts/package.json"],
      "@rapid/contacts": ["../contacts/src/index.ts"],
      "@rapid/email/package.json": ["../email/package.json"],
      "@rapid/email": ["../email/src/index.ts"],
      "@rapid/keychain/package.json": ["../keychain/package.json"],
      "@rapid/keychain": ["../keychain/src/index.ts"],
      "@rapid/notes/package.json": ["../notes/package.json"],
      "@rapid/notes": ["../notes/src/index.ts"],
      "@rapid/terminal/package.json": ["../terminal/package.json"],
      "@rapid/terminal": ["../terminal/src/index.ts"],
      "@rapid/vfs-explorer/package.json": ["../vfs-explorer/package.json"],
      "@rapid/vfs-explorer": ["../vfs-explorer/src/index.ts"],
      "@rapid/mls-chat/package.json": ["../mls-chat/package.json"],
      "@rapid/mls-chat": ["../mls-chat/src/index.ts"],
      "@rapid/window-manager": ["../window-manager/src/index.ts"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
