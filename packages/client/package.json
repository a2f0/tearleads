{
  "name": "@rapid/client",
  "version": "0.0.3",
  "description": "React client application for Rapid",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "clean": "rm -rf dist",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "cap:sync": "cap sync",
    "cap:open:android": "cap open android",
    "cap:run:android": "cap run android",
    "build:android": "pnpm build && cap sync android",
    "cap:open:ios": "cap open ios",
    "cap:run:ios": "cap run ios",
    "build:ios": "pnpm build && cap sync ios",
    "lint:scripts": "shellcheck --severity=info scripts/*.sh",
    "lint:rubocop": "bundle exec rubocop",
    "test:maestro": "$HOME/.maestro/bin/maestro test .maestro/",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@capacitor/app": "8.0.0",
    "@capacitor/core": "8.0.0",
    "@radix-ui/react-slot": "1.2.4",
    "@rapid/shared": "workspace:*",
    "@rapid/ui": "workspace:*",
    "class-variance-authority": "0.7.1",
    "lucide-react": "0.561.0",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@capacitor/android": "8.0.0",
    "@capacitor/cli": "8.0.0",
    "@capacitor/ios": "8.0.0",
    "@playwright/test": "1.57.0",
    "@tailwindcss/vite": "4.1.18",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "25.0.2",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.2",
    "jsdom": "27.3.0",
    "svgo": "4.0.0",
    "tailwindcss": "4.1.18",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vite": "7.2.7",
    "vitest": "4.0.15"
  }
}
