{
  "name": "@rapid/client",
  "version": "0.0.3",
  "description": "React client application for Rapid",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "clean": "rm -rf dist",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "cap:sync": "cap sync",
    "cap:open:android": "cap open android",
    "cap:run:android": "cap run android",
    "build:android": "pnpm build && cap sync android",
    "cap:open:ios": "cap open ios",
    "cap:run:ios": "cap run ios",
    "build:ios": "pnpm build && cap sync ios",
    "lint:scripts": "shellcheck --severity=info scripts/*.sh",
    "lint:rubocop": "bundle exec rubocop",
    "test:maestro": "$HOME/.maestro/bin/maestro test .maestro/"
  },
  "dependencies": {
    "@capacitor/core": "7.4.4",
    "@radix-ui/react-slot": "1.2.4",
    "@rapid/shared": "workspace:*",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.555.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "tailwind-merge": "3.4.0"
  },
  "devDependencies": {
    "@capacitor/android": "7.4.4",
    "@capacitor/cli": "7.4.4",
    "@capacitor/ios": "7.4.4",
    "@playwright/test": "1.57.0",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@vitejs/plugin-react": "4.3.4",
    "autoprefixer": "10.4.22",
    "postcss": "8.5.6",
    "svgo": "4.0.0",
    "tailwindcss": "3.4.17",
    "tailwindcss-animate": "1.0.7",
    "tsx": "4.7.0",
    "typescript": "5.3.3",
    "vite": "5.4.21"
  }
}
