{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node", "@wdio/globals/types", "@wdio/mocha-framework"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
