{
  "name": "@tearleads/smtp-listener",
  "version": "0.0.23",
  "description": "SMTP listener for receiving and storing emails",
  "main": "dist/index.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx ../../scripts/lib/killPnpmDev.ts && tsx watch --clear-screen=false src/main.ts",
    "build": "tsc",
    "build:bundle": "esbuild src/main.ts --bundle --platform=node --target=node22 --format=cjs --outfile=dist/server.cjs --minify --sourcemap",
    "clean": "rm -rf dist",
    "start": "node dist/server.cjs",
    "test": "cross-env DOTENV_CONFIG_QUIET=true vitest run",
    "test:coverage": "cross-env DOTENV_CONFIG_QUIET=true vitest run --coverage"
  },
  "keywords": [
    "smtp",
    "email",
    "listener"
  ],
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "@aws-sdk/client-s3": "3.1000.0",
    "@tearleads/shared": "workspace:*",
    "dotenv": "17.3.1",
    "pg": "8.19.0",
    "smtp-server": "3.18.1"
  },
  "devDependencies": {
    "@tearleads/api-test-utils": "workspace:*",
    "@types/node": "25.3.2",
    "@types/pg": "8.16.0",
    "@types/smtp-server": "3.5.12",
    "@vitest/coverage-v8": "4.0.18",
    "esbuild": "0.27.3",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "4.0.18",
    "vitest-fail-on-console": "0.10.1"
  }
}
