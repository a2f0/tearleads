{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist-tests",
    "tsBuildInfoFile": "./dist-tests/.tsbuildinfo"
  },
  "include": ["src/test/**/*", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
