{
  "name": "@tearleads/ui",
  "version": "0.0.128",
  "description": "Shared UI components and design system for Tearleads",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles.css": "./dist/styles/index.css",
    "./theme.css": "./dist/styles/theme.css",
    "./logo.svg": "./dist/images/logo.svg"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && pnpm copy-assets",
    "copy-assets": "cp -r src/styles dist/ && cp -r src/images dist/",
    "clean": "rm -rf dist",
    "test": "cross-env DOTENV_CONFIG_QUIET=true vitest run",
    "test:coverage": "cross-env DOTENV_CONFIG_QUIET=true vitest run --coverage"
  },
  "peerDependencies": {
    "@tearleads/shared": "workspace:*",
    "react": "19.2.4",
    "react-dom": "19.2.4"
  },
  "dependencies": {
    "@radix-ui/react-tooltip": "1.2.8",
    "clsx": "2.1.1",
    "lucide-react": "0.564.0",
    "openapi-types": "12.1.3",
    "tailwind-merge": "3.4.1"
  },
  "devDependencies": {
    "@tearleads/shared": "workspace:*",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.2",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "25.2.3",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.4",
    "@vitest/coverage-v8": "4.0.18",
    "jsdom": "28.1.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "typescript": "5.9.3",
    "vitest": "4.0.18",
    "vitest-fail-on-console": "0.10.1"
  }
}
