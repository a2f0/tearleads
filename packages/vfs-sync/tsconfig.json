{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../client/src/*"],
      "@client/*": ["../client/src/*"],
      "@tearleads/api-client/package.json": ["../api-client/package.json"],
      "@tearleads/api-client": ["../api-client/src/index.ts"],
      "@tearleads/api-client/authStorage": ["../api-client/src/authStorage.ts"],
      "@sync/*": ["./src/*"]
    },
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx", "src/test/setup.ts"]
}
