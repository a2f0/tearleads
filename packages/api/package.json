{
  "name": "@tearleads/api",
  "version": "0.0.443",
  "description": "Express API for Tearleads",
  "main": "dist/index.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx ../../scripts/killPnpmDev.ts && tsx watch --clear-screen=false src/index.ts",
    "build": "tsc && pnpm buildOpenapi",
    "buildOpenapi": "tsx scripts/generateOpenapi.ts",
    "createAccount": "tsx scripts/createAccount.ts",
    "makeAdmin": "tsx scripts/makeAdmin.ts",
    "build:bundle": "rm -rf dist && esbuild src/index.ts --bundle --platform=node --target=node22 --format=cjs --outfile=dist/server.cjs --minify --sourcemap",
    "build:cli": "esbuild src/apiCli.ts --bundle --platform=node --target=node22 --format=cjs --outfile=dist/apiCli.cjs --minify --sourcemap",
    "build:all": "rm -rf dist && pnpm build:bundle && pnpm build:cli",
    "cli": "tsx src/apiCli.ts",
    "deleteAccount": "tsx scripts/deleteAccount.ts",
    "start": "node dist/server.cjs",
    "clean": "rm -rf dist",
    "test": "cross-env DOTENV_CONFIG_QUIET=true vitest run",
    "test:coverage": "cross-env DOTENV_CONFIG_QUIET=true vitest run --coverage"
  },
  "keywords": [
    "api",
    "express"
  ],
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "@tearleads/db": "workspace:*",
    "@tearleads/sync": "workspace:*",
    "@tearleads/vfs-sync": "workspace:*",
    "@tearleads/shared": "workspace:*",
    "commander": "14.0.3",
    "cors": "2.8.6",
    "dotenv": "17.3.1",
    "express": "5.2.1",
    "jsonwebtoken": "9.0.3",
    "morgan": "1.10.1",
    "nodemailer": "8.0.1",
    "pg": "8.18.0",
    "redis": "5.10.0",
    "swagger-jsdoc": "6.2.8"
  },
  "devDependencies": {
    "@types/cors": "2.8.19",
    "@types/express": "5.0.6",
    "@types/jsonwebtoken": "9.0.10",
    "@types/morgan": "1.9.10",
    "@types/node": "25.2.3",
    "@types/nodemailer": "7.0.10",
    "@types/pg": "8.16.0",
    "@types/supertest": "6.0.3",
    "@types/swagger-jsdoc": "6.0.4",
    "@vitest/coverage-v8": "4.0.18",
    "esbuild": "0.27.3",
    "openapi-types": "12.1.3",
    "supertest": "7.2.2",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "4.0.18",
    "vitest-fail-on-console": "0.10.1"
  }
}
