{
  "name": "@rapid/api",
  "version": "0.0.14",
  "description": "Express API for Rapid",
  "main": "dist/index.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "build": "tsc",
    "build:bundle": "rm -rf dist && esbuild src/index.ts --bundle --platform=node --target=node22 --format=cjs --outfile=dist/server.cjs --minify --sourcemap",
    "start": "node dist/server.cjs",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "api",
    "express"
  ],
  "author": "",
  "license": "Unlicensed",
  "dependencies": {
    "@rapid/shared": "workspace:*",
    "cors": "2.8.5",
    "dotenv": "17.2.3",
    "express": "5.2.1",
    "mongodb": "7.0.0"
  },
  "devDependencies": {
    "@types/cors": "2.8.19",
    "@types/express": "5.0.6",
    "@types/node": "25.0.3",
    "@types/supertest": "6.0.3",
    "@vitest/coverage-v8": "4.0.16",
    "esbuild": "0.27.2",
    "supertest": "7.1.4",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  }
}
