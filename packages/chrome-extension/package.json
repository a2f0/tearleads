  "dependencies": {
    "@rapid/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/chrome": "0.0.287",
    "@types/node": "25.0.3",
    "@vitest/coverage-v8": "4.0.16",
    "jsdom": "27.4.0",
    "typescript": "5.9.3",
    "vite": "7.3.0",
    "vitest": "4.0.16",
    "vitest-fail-on-console": "0.10.1"
  }
}
