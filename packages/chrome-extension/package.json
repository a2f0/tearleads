{
  "name": "@tearleads/chrome-extension",
  "version": "0.0.155",
  "description": "Chrome extension for Tearleads",
  "type": "module",
  "scripts": {
    "dev": "cross-env DOTENV_CONFIG_QUIET=true vite build --watch",
    "build": "tsc && cross-env DOTENV_CONFIG_QUIET=true vite build",
    "clean": "rm -rf dist",
    "test": "cross-env DOTENV_CONFIG_QUIET=true vitest run",
    "test:watch": "cross-env DOTENV_CONFIG_QUIET=true vitest",
    "test:coverage": "cross-env DOTENV_CONFIG_QUIET=true vitest run --coverage"
  },
  "dependencies": {
    "@tearleads/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/chrome": "0.1.36",
    "@types/node": "25.2.3",
    "@vitest/coverage-v8": "4.0.18",
    "cross-env": "10.1.0",
    "jsdom": "28.1.0",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vitest": "4.0.18",
    "vitest-fail-on-console": "0.10.1"
  }
}
