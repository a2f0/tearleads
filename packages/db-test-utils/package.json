{
  "name": "@tearleads/db-test-utils",
  "version": "0.0.32",
  "description": "Database testing utilities for Tearleads integration tests",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./seeding": {
      "types": "./dist/seeding/index.d.ts",
      "import": "./dist/seeding/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "cross-env DOTENV_CONFIG_QUIET=true vitest run",
    "test:coverage": "cross-env DOTENV_CONFIG_QUIET=true vitest run --coverage"
  },
  "keywords": [
    "database",
    "testing",
    "sqlite",
    "vitest"
  ],
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "@tearleads/db": "workspace:*",
    "@tearleads/shared": "workspace:*",
    "drizzle-orm": "0.45.1"
  },
  "devDependencies": {
    "@testing-library/react": "16.3.2",
    "@types/node": "25.3.2",
    "@types/react": "19.2.14",
    "@vitest/coverage-v8": "4.0.18",
    "jsdom": "28.1.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "typescript": "5.9.3",
    "vitest": "4.0.18",
    "vitest-fail-on-console": "0.10.1"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "vitest": "^4.0.0"
  }
}
