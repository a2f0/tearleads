{
  "name": "@tearleads/api-test-utils",
  "version": "0.0.2",
  "description": "API testing utilities with PGlite and Redis mock for integration tests",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "cross-env DOTENV_CONFIG_QUIET=true NODE_ENV=test vitest run",
    "test:coverage": "cross-env DOTENV_CONFIG_QUIET=true NODE_ENV=test vitest run --coverage"
  },
  "keywords": [
    "api",
    "testing",
    "pglite",
    "vitest"
  ],
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "@electric-sql/pglite": "0.2.17",
    "@tearleads/db": "workspace:*",
    "@tearleads/shared": "workspace:*",
    "jsonwebtoken": "9.0.3",
    "pg": "8.18.0"
  },
  "devDependencies": {
    "@types/express": "5.0.6",
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "25.3.0",
    "@types/pg": "8.16.0",
    "@vitest/coverage-v8": "4.0.18",
    "cross-env": "7.0.3",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "peerDependencies": {
    "vitest": "^4.0.0"
  }
}
