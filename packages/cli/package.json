{
  "name": "@rapid/cli",
  "version": "0.0.1",
  "description": "Tearleads CLI for database management",
  "type": "module",
  "bin": {
    "tearleads": "./dist/index.js"
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "wasm"
  ],
  "scripts": {
    "build": "tsc && pnpm copyWasm",
    "copyWasm": "mkdir -p wasm && cp ../client/src/workers/sqlite-wasm/sqlite3.mjs ../client/src/workers/sqlite-wasm/sqlite3.wasm wasm/",
    "dev": "tsx src/index.ts",
    "clean": "rm -rf dist wasm",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "cli",
    "tearleads",
    "sqlite"
  ],
  "author": "",
  "license": "Unlicensed",
  "dependencies": {
    "@rapid/shared": "workspace:*",
    "commander": "13.1.0"
  },
  "devDependencies": {
    "@types/node": "25.0.3",
    "@vitest/coverage-v8": "4.0.16",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  }
}
