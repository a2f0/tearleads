{
  "name": "@tearleads/classic",
  "version": "0.0.46",
  "description": "Classic tag-and-note workspace for Tearleads",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist dist-tests coverage",
    "test": "cross-env DOTENV_CONFIG_QUIET=true vitest run",
    "test:coverage": "cross-env DOTENV_CONFIG_QUIET=true vitest run --coverage"
  },
  "peerDependencies": {
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-i18next": "16.5.4"
  },
  "devDependencies": {
    "@tearleads/db": "workspace:*",
    "@tearleads/db-test-utils": "workspace:*",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.2",
    "@types/node": "25.3.0",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.4",
    "@vitest/coverage-v8": "4.0.18",
    "drizzle-orm": "0.45.1",
    "i18next": "25.8.12",
    "jsdom": "28.1.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-i18next": "16.5.4",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
