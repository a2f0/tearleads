{
  "name": "@tearleads/db",
  "version": "0.0.44",
  "description": "Shared database schema definitions for Tearleads",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./sqlite": {
      "types": "./dist/generated/sqlite/schema.d.ts",
      "import": "./dist/generated/sqlite/schema.js"
    },
    "./postgresql": {
      "types": "./dist/generated/postgresql/schema.d.ts",
      "import": "./dist/generated/postgresql/schema.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm generate && tsc",
    "generate": "pnpm generate:sqlite && pnpm generate:postgresql",
    "generate:sqlite": "tsx scripts/generateSqlite.ts",
    "generate:postgresql": "tsx scripts/generatePostgresql.ts",
    "clean": "rm -rf dist",
    "test": "cross-env DOTENV_CONFIG_QUIET=true vitest run",
    "test:coverage": "cross-env DOTENV_CONFIG_QUIET=true vitest run --coverage"
  },
  "keywords": [
    "database",
    "schema",
    "drizzle",
    "sqlite",
    "postgresql"
  ],
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "@tearleads/shared": "workspace:*",
    "drizzle-orm": "0.45.1"
  },
  "devDependencies": {
    "@types/pg": "8.16.0",
    "@vitest/coverage-v8": "4.0.18",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "4.0.18",
    "vitest-fail-on-console": "0.10.1"
  }
}
