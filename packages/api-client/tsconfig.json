{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@api-client/*": ["./src/*"],
      "@tearleads/local-write-orchestrator/package.json": [
        "../local-write-orchestrator/package.json"
      ],
      "@tearleads/local-write-orchestrator": [
        "../local-write-orchestrator/src/index.ts"
      ],
      "@tearleads/shared/package.json": ["../shared/package.json"],
      "@tearleads/shared": ["../shared/src/index.ts"],
      "@tearleads/vfs-sync/package.json": ["../vfs-sync/package.json"],
      "@tearleads/vfs-sync": ["../vfs-sync/src/index.ts"],
      "@tearleads/vfs-sync/vfs": ["../vfs-sync/src/vfs/index.ts"]
    },
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx", "src/test/setup.ts"]
}
