{
  "name": "@tearleads/bob-and-alice",
  "version": "0.0.6",
  "private": true,
  "description": "End-to-end integration tests simulating multi-user CRDT sync",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "build": "echo \"@tearleads/bob-and-alice is a test-only package\"",
    "clean": "rm -rf dist",
    "test": "cross-env DOTENV_CONFIG_QUIET=true vitest run",
    "test:coverage": "cross-env DOTENV_CONFIG_QUIET=true vitest run --coverage"
  },
  "dependencies": {
    "@tearleads/db": "workspace:*",
    "@tearleads/db-test-utils": "workspace:*",
    "@tearleads/local-write-orchestrator": "workspace:*",
    "@tearleads/shared": "workspace:*",
    "@tearleads/vfs-sync": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "25.3.0",
    "@vitest/coverage-v8": "4.0.18",
    "cross-env": "10.1.0",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
