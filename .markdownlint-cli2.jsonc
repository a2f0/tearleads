{
  "config": {
    "default": true,
    "MD013": false, // Line length - allow long lines for URLs, tables, code blocks
    "MD033": false, // Inline HTML - allow HTML elements in markdown
    "MD041": false, // First line heading - not all files need to start with h1
    "MD060": false // Table column style - allow compact table formatting
  },
  "ignores": [
    "**/node_modules",
    "dist",
    "**/dist",
    ".git",
    "**/.terraform",
    "**/vendor",
    "**/Pods",
    "**/fastlane/README.md",
    "**/playwright-report",
    "**/test-results",
    // Codex-managed system skills folder - auto-generated markdown that we don't control
    ".claude/commands/skills/.system",
    // Serena memory files - auto-generated agent memories that we don't control
    ".serena/memories"
  ]
}
