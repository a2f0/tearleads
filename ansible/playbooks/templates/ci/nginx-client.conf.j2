{% set include_hsts = include_hsts | default(false) %}
{% set app_headers %}{% include 'nginx-headers-app.conf.j2' %}{% endset %}
{% set api_headers %}{% include 'nginx-headers-api.conf.j2' %}{% endset %}
# NGINX configuration for CI release testing - Client App
# Serves the built client app with production-like headers
#
# IMPORTANT: In NGINX, add_header in location blocks REPLACES parent headers.
# All required headers must be repeated in each location block.

server {
    listen 8443 ssl http2;
    server_name {{ ci_server_name }};

    ssl_certificate {{ ci_ssl_certificate }};
    ssl_certificate_key {{ ci_ssl_certificate_key }};

    root {{ ci_workspace }}/packages/client/dist;
    index index.html;

    # Default MIME type for unknown extensions
    default_type application/octet-stream;

    # Ensure module workers and WASM are served with correct MIME types in CI
    types {
        application/javascript js mjs;
        application/wasm wasm;
        text/css css;
        text/html html;
        application/json json;
        image/svg+xml svg;
    }

    # Service worker - never cache, always fetch fresh
    location = /sw.js {
        add_header Cache-Control "no-cache, no-store, must-revalidate";
{{ app_headers | indent(8, true) }}
    }

    # Manifest and registerSW - short cache
    location ~* ^/(manifest\.webmanifest|registerSW\.js)$ {
        add_header Cache-Control "no-cache";
{{ app_headers | indent(8, true) }}
    }

    # /sqlite is a client route, but /sqlite/ hosts WASM assets
    location = /sqlite {
        try_files /index.html =404;
        add_header Cache-Control "no-cache";
{{ app_headers | indent(8, true) }}
    }

    location ^~ /sqlite/ {
        try_files $uri =404;
        add_header Cache-Control "public, immutable";
{{ app_headers | indent(8, true) }}
    }

    # Static assets - fingerprinted, cache aggressively (Vite uses /assets/)
    location ^~ /assets/ {
        try_files $uri =404;
        expires 1y;
        add_header Cache-Control "public, immutable";
{{ app_headers | indent(8, true) }}
    }

    # API reverse proxy
    location /v1/ {
        proxy_pass http://127.0.0.1:5001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        proxy_read_timeout 60s;
        proxy_connect_timeout 60s;

        # API-specific security headers
{{ api_headers | indent(8, true) }}
    }

    # SPA fallback for client-side routing
    location / {
        try_files $uri $uri/ /index.html;
        add_header Cache-Control "no-cache";
{{ app_headers | indent(8, true) }}
    }
}
