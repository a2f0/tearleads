{% set include_hsts = include_hsts | default(false) %}
{% set api_headers %}{% include 'nginx-headers-api.conf.j2' %}{% endset %}
# NGINX configuration for CI release testing - API Proxy Only
# Used by Electron tests that only need API access (not static files)

server {
    listen 8443 ssl http2;
    server_name {{ ci_server_name }};

    ssl_certificate {{ ci_ssl_certificate }};
    ssl_certificate_key {{ ci_ssl_certificate_key }};

    # API reverse proxy
    location /v1/ {
        proxy_pass http://127.0.0.1:5001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        proxy_read_timeout 60s;
        proxy_connect_timeout 60s;

        # API security headers
{{ api_headers | indent(8, true) }}
    }
}
