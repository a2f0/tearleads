{% set include_hsts = include_hsts | default(false) %}
{% set app_headers %}{% include 'nginx-headers-app.conf.j2' %}{% endset %}
server {
    listen 80;
{% if item == 'www' %}
    server_name {{ domain }} www.{{ domain }};
{% else %}
    server_name {{ item }}.{{ domain }};
{% endif %}

    root /var/www/{{ item }};
    index index.html;

{% if item == 'app' %}
    # Service worker - never cache, always fetch fresh
    location = /sw.js {
        add_header Cache-Control "no-cache, no-store, must-revalidate";
{{ app_headers | indent(8, true) }}
    }

    # Manifest and registerSW - short cache
    location ~* ^/(manifest\.webmanifest|registerSW\.js)$ {
        add_header Cache-Control "no-cache";
{{ app_headers | indent(8, true) }}
    }

    # Static assets - fingerprinted, cache aggressively (Vite uses /assets/)
    # Use ^~ to prevent regex locations (like .mjs) from taking precedence
    location ^~ /assets/ {
        # Define MIME types for all assets (types directive overrides inherited types)
        types {
            application/javascript    js mjs;
            text/css                  css;
            image/svg+xml             svg;
            image/png                 png;
            image/x-icon              ico;
            application/manifest+json webmanifest;
            font/woff                 woff;
            font/woff2                woff2;
            application/wasm          wasm;
        }
        try_files $uri =404;
        expires 1y;
        add_header Cache-Control "public, immutable";
{{ app_headers | indent(8, true) }}
    }

    # SQLite WASM files - match specific file types only (not the /sqlite SPA route)
    # Uses regex to avoid blocking /sqlite/ directory requests which need SPA fallback (#524)
    # See also: #656 (MIME types), #578 (SPA vs static), #670 (Android WebView)
    location ~* ^/sqlite/.*\.(wasm|js)$ {
        types {
            application/javascript    js;
            application/wasm          wasm;
        }
        try_files $uri =404;
        expires 7d;
        add_header Cache-Control "public";
{{ app_headers | indent(8, true) }}
    }
{% else %}
    # Static assets - fingerprinted, cache aggressively (Astro uses /_astro/)
    location /_astro/ {
        try_files $uri =404;
        expires 1y;
        add_header Cache-Control "public, immutable";
{{ app_headers | indent(8, true) }}
    }
{% endif %}

    location / {
{% if item == 'app' %}
        # SPA fallback for client-side routing - no cache for HTML
        try_files $uri /index.html;
        add_header Cache-Control "no-cache";
{% else %}
        # Static site - serve files/directories, no SPA fallback
        try_files $uri $uri/ =404;
{% endif %}
{{ app_headers | indent(8, true) }}
    }

    # Serve .mjs files with correct MIME type for ES modules
    location ~* \.mjs$ {
        types { application/javascript mjs; }
        default_type application/javascript;
    }
}
