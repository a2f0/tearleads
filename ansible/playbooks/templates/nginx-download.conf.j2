{% set include_hsts = include_hsts | default(false) %}
{% set download_headers %}{% include 'nginx-headers-download.conf.j2' %}{% endset %}
server {
    listen 80;
    server_name download.{{ domain }};

    root /var/www/downloads;

    location / {
        autoindex on;
        autoindex_exact_size off;
        autoindex_localtime on;
        try_files $uri $uri/ =404;
{{ download_headers | indent(8, true) }}
    }
}
