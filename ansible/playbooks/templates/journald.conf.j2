# Journald Compliance Configuration
# Deployed via Ansible - do not edit manually
# 90-day operational retention with persistent storage

[Journal]
# Persistent storage ensures logs survive reboots
Storage=persistent

# Retain logs for 90 days (operational retention period)
MaxRetentionSec={{ audit_log_retention_days }}d

# Storage limits
SystemMaxUse={{ journald_system_max_use }}
RuntimeMaxUse={{ journald_runtime_max_use }}

# Compression for storage efficiency
Compress=yes

# Seal journal files for tamper detection (if supported)
Seal=yes

# Forward to syslog for external aggregation if configured
ForwardToSyslog=yes
