{
  "$schema": "./node_modules/knip/schema.json",
  "include": [
    "files",
    "dependencies",
    "devDependencies",
    "exports",
    "types",
    "unlisted",
    "unresolved",
    "binaries"
  ],
  "ignore": [
    "**/dist/**",
    "**/coverage/**",
    "**/node_modules/**",
    "packages/client/android/**",
    "packages/client/ios/**"
  ],
  "ignoreFiles": [
    "packages/**/src/generated/**",
    "scripts/dist/**",
    "scripts/dist-tests/**"
  ],
  "ignoreUnresolved": [
    "^@/components/sqlite/exportTableCsv$",
    "^@/db/analytics$"
  ],
  "ignoreBinaries": ["ansible-lint", "shellcheck", "playwright"]
}
