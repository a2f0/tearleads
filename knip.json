{
  "$schema": "./node_modules/knip/schema.json",
  "include": [
    "files",
    "dependencies",
    "devDependencies",
    "exports",
    "types",
    "unlisted",
    "unresolved",
    "binaries"
  ],
  "ignore": [
    "**/dist/**",
    "**/coverage/**",
    "**/node_modules/**",
    "packages/client/android/**",
    "packages/client/ios/**"
  ],
  "ignoreFiles": [
    "packages/**/src/generated/**",
    "packages/client/tests/playwright-env.d.ts",
    "scripts/dist/**",
    "scripts/dist-tests/**"
  ],
  "ignoreUnresolved": [
    "^@/components/sqlite/exportTableCsv$",
    "^@/db/analytics$"
  ],
  "ignoreBinaries": ["ansible-lint", "shellcheck", "playwright"],
  "workspaces": {
    ".": {
      "entry": [
        "scripts/*.ts",
        "scripts/agents/**/*.ts",
        "scripts/ciImpact/**/*.ts",
        "scripts/costModel/index.ts",
        "scripts/lib/**/*.ts",
        "scripts/preen/**/*.ts",
        "scripts/tooling/scriptTool.ts"
      ]
    },
    "packages/client": {
      "entry": [
        "electron.vite.config.ts",
        "electronBuilder.config.ts",
        "electron/main.ts",
        "electron/preload.ts"
      ]
    },
    "packages/vfs-sync": {
      "entry": ["src/clientEntry.ts"]
    }
  }
}
