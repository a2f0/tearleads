# shellcheck shell=bash
# shellcheck disable=SC1090,SC1091
# Tuxedo bashrc wrapper
# Sources user's .bashrc first, then init-env.sh to ensure version managers work

# Source user's real .bashrc if it exists
if [[ -f "$HOME/.bashrc" ]]; then
    source "$HOME/.bashrc"
fi

# Source init-env.sh AFTER user's rc to ensure shims are first in PATH
if [[ -f "$TUXEDO_INIT_ENV" ]]; then
    source "$TUXEDO_INIT_ENV"
fi
