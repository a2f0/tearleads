{
  "name": "tearleads",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24.13.1 <25"
  },
  "scripts": {
    "postinstall": "pnpm buildPreDev",
    "buildPreDev": "pnpm build:shared && pnpm build:db && pnpm downloadSqliteWasm && pnpm generateDefaultApp",
    "downloadSqliteWasm": "./scripts/downloadSqliteWasm.sh",
    "generateDefaultApp": "tsx packages/app-builder/src/cli.ts generate --default",
    "build:shared": "pnpm --filter @tearleads/shared build",
    "build:db": "pnpm --filter @tearleads/db build",
    "build:businesses": "pnpm --filter @tearleads/businesses build",
    "build:vehicles": "pnpm --filter @tearleads/vehicles build",
    "build:ui": "pnpm --filter @tearleads/ui build",
    "build:window-manager": "pnpm --filter @tearleads/window-manager build",
    "build:notes": "pnpm --filter @tearleads/notes build",
    "build:terminal": "pnpm --filter @tearleads/terminal build",
    "build:contacts": "pnpm --filter @tearleads/contacts build",
    "build:email": "pnpm --filter @tearleads/email build",
    "build:calendar": "pnpm --filter @tearleads/calendar build",
    "build:health": "pnpm --filter @tearleads/health build",
    "dev": "FORCE_COLOR=0 tsx scripts/killPnpmDev.ts --force && FORCE_COLOR=0 VITE_API_URL=http://localhost:5001/v1 pnpm buildPreDev && FORCE_COLOR=0 pnpm --filter @tearleads/api buildOpenapi && FORCE_COLOR=0 tsx scripts/checkSmtpPort.ts && FORCE_COLOR=0 TEARLEADS_SKIP_DEV_KILL=1 concurrently -n api,client,website,smtp -c blue,magenta,cyan,green \"FORCE_COLOR=0 pnpm --filter @tearleads/api dev\" \"FORCE_COLOR=0 pnpm --filter @tearleads/client dev\" \"FORCE_COLOR=0 pnpm --filter @tearleads/website dev\" \"FORCE_COLOR=0 pnpm --filter @tearleads/smtp-listener dev\"",
    "dev:api": "FORCE_COLOR=0 pnpm build:shared && FORCE_COLOR=0 pnpm build:db && FORCE_COLOR=0 pnpm --filter @tearleads/api dev",
    "dev:client": "FORCE_COLOR=0 VITE_API_URL=http://localhost:5001/v1 pnpm buildPreDev && FORCE_COLOR=0 pnpm --filter @tearleads/client dev",
    "devWebsite": "FORCE_COLOR=0 pnpm --filter @tearleads/api buildOpenapi && FORCE_COLOR=0 pnpm --filter @tearleads/website dev",
    "build": "pnpm -r build",
    "enforceTypeScriptIncrementalBuilds": "./scripts/preen/enforceTypeScriptIncrementalBuilds.ts",
    "test": "pnpm -r test && pnpm test:tuxedo",
    "qaVfsSecureUpload": "tsx scripts/qa/vfsSecureUploadReadiness.ts",
    "qaVfsSecureUploadEvidence": "tsx scripts/qa/vfsSecureUploadReadiness.ts --continue-on-failure --report-json coverage/qa/vfsSecureUploadReadiness.json --report-markdown coverage/qa/vfsSecureUploadReadiness.md",
    "setupLocalGarage": "sh scripts/setupLocalGarage.sh",
    "stopLocalGarage": "sh scripts/stopLocalGarage.sh",
    "testVfsSecureUploadReadiness": "tsx --test scripts/qa/vfsSecureUploadReadiness.test.ts",
    "test:tuxedo": "sh ./tuxedo/tests/run.sh",
    "test:coverage": "sh ./tuxedo/tests/coverage.sh",
    "clean": "pnpm -r clean",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "lint:scripts": "sh -c 'set -eu; files=\"scripts/*.sh scripts/preen/*.sh\"; extra=\"\"; if [ -d ansible/playbooks/files/scripts ]; then extra=$(find ansible/playbooks/files/scripts -maxdepth 1 -type f -name \"*.sh\" -print); fi; shellcheck --severity=info $files $extra' && pnpm --filter @tearleads/client lint:scripts",
    "lint:rubocop": "pnpm --filter @tearleads/client lint:rubocop",
    "lint:ansible": "ansible-lint ansible/ terraform/stacks/staging/tee/ansible/ terraform/stacks/prod/tee/ansible/",
    "lint:md": "markdownlint-cli2 '**/*.md'",
    "lint:actions": "./scripts/checkGithubActions.sh",
    "lint:knip": "knip --config knip.ts --use-tsconfig-files",
    "lint:knip:fix": "knip -n --config knip.ts --use-tsconfig-files --fix --fix-type dependencies --format",
    "lintPreen": "./scripts/checkPreenEcosystem.sh --strict",
    "checkMswParity": "./scripts/preen/checkMswParity.ts",
    "format": "biome format --write .",
    "generatePreenDocs": "./scripts/preen/generatePreenDocs.sh",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/a2f0/tearleads.git"
  },
  "author": "",
  "license": "UNLICENSED",
  "description": "Monorepo for Tearleads application",
  "devDependencies": {
    "@biomejs/biome": "2.4.3",
    "@octokit/rest": "22.0.1",
    "@tsconfig/strictest": "2.0.8",
    "@types/node": "25.3.0",
    "pg": "8.18.0",
    "@vitest/coverage-v8": "4.0.18",
    "commander": "14.0.3",
    "concurrently": "9.2.1",
    "cross-env": "10.1.0",
    "husky": "9.1.7",
    "knip": "5.84.1",
    "markdownlint-cli2": "0.21.0",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "packageManager": "pnpm@9.15.9+sha512.68046141893c66fad01c079231128e9afb89ef87e2691d69e4d40eee228988295fd4682181bae55b58418c3a253bde65a505ec7c5f9403ece5cc3cd37dcf2531",
  "pnpm": {
    "overrides": {
      "@esbuild-kit/core-utils>esbuild": ">=0.25.0",
      "pg": "8.18.0",
      "sql.js": "1.14.0"
    }
  }
}
