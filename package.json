{
  "name": "rapid",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "npm run build:shared",
    "build:shared": "npm run build -w @rapid/shared",
    "dev": "npm run build:shared && concurrently -n api,client -c blue,magenta \"npm run dev -w @rapid/api\" \"npm run dev -w @rapid/client\"",
    "dev:api": "npm run build:shared && npm run dev -w @rapid/api",
    "dev:client": "npm run build:shared && npm run dev -w @rapid/client",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/a2f0/rapid.git"
  },
  "author": "",
  "license": "Unlicensed",
  "description": "Monorepo for Rapid application",
  "devDependencies": {
    "@tsconfig/strictest": "2.0.8",
    "concurrently": "9.2.1",
    "typescript": "5.3.3"
  }
}
