{
  "name": "rapid",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "pnpm build:shared",
    "build:shared": "pnpm --filter @rapid/shared build",
    "dev": "pnpm build:shared && concurrently -n api,client -c blue,magenta \"pnpm --filter @rapid/api dev\" \"pnpm --filter @rapid/client dev\"",
    "dev:api": "pnpm build:shared && pnpm --filter @rapid/api dev",
    "dev:client": "pnpm build:shared && pnpm --filter @rapid/client dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "lint:scripts": "shellcheck scripts/*.sh && pnpm --filter @rapid/client lint:scripts",
    "lint:rubocop": "pnpm --filter @rapid/client lint:rubocop",
    "format": "biome format --write .",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/a2f0/rapid.git"
  },
  "author": "",
  "license": "Unlicensed",
  "description": "Monorepo for Rapid application",
  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "@tsconfig/strictest": "2.0.8",
    "concurrently": "9.2.1",
    "husky": "9.1.7",
    "typescript": "5.3.3"
  },
  "packageManager": "pnpm@9.15.9+sha512.68046141893c66fad01c079231128e9afb89ef87e2691d69e4d40eee228988295fd4682181bae55b58418c3a253bde65a505ec7c5f9403ece5cc3cd37dcf2531"
}
